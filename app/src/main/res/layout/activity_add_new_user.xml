<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.AddNewUser">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="3"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_remove"
            android:layout_width="74dp"
            android:layout_height="62dp"

            android:background="@drawable/logo" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_weight="1"
        android:background="@drawable/containerlayout"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1.1"
            android:layout_height="match_parent">
            <TextView
                android:fontFamily="@font/alegreya"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/primaryTextColor"
                android:textSize="30sp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/addnewuser"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/gray_btn_bg_color"
                android:textSize="18sp"
              android:padding="4dp"
                android:gravity="bottom"
                android:layout_weight="1"
                android:text="@string/username"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/primaryTextColor"
                android:textSize="18sp"
                android:padding="4dp"
                android:layout_marginEnd="9dp"
                android:layout_marginStart="9dp"
                android:background="@drawable/edittextstyle"
                android:layout_weight="1"
                android:id="@+id/username"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/gray_btn_bg_color"
                android:textSize="18sp"
                android:gravity="bottom"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="@string/password"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/primaryTextColor"
                android:textSize="18sp"
                android:padding="4dp"
                android:layout_marginEnd="9dp"
                android:layout_marginStart="9dp"
                android:background="@drawable/edittextstyle"
                android:layout_weight="1"
                android:id="@+id/passEdt"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.1"
            android:padding="8dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/gray_btn_bg_color"
                android:textSize="18sp"

                android:padding="8dp"
                android:gravity="bottom"
                android:layout_weight="1"
                android:text="@string/type"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/primaryTextColor"
                android:textSize="18sp"
                android:entries="@array/user_type"
                android:padding="4dp"
                android:layout_marginEnd="9dp"
                android:layout_marginStart="9dp"
                android:background="@drawable/edittextstyle"
                android:layout_weight="1"

                android:id="@+id/usertype"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.1"
            android:padding="8dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/gray_btn_bg_color"
                android:textSize="18sp"
                android:padding="4dp"
                android:layout_weight="1"
                android:text="@string/dis_per"/>

<RadioGroup
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:layout_marginStart="40dp"
    android:id="@+id/dis_Per"
    android:layout_height="match_parent">
    <RadioButton
        android:layout_width="100dp"
        android:id="@+id/RB_yes"
        android:text="@string/yes"
        android:padding="3dp"
        android:textColor="@color/primaryTextColor"
        android:layout_height="match_parent"/>
    <RadioButton
        android:layout_width="100dp"
        android:text="@string/no"
        android:id="@+id/RB_no"
        android:textColor="@color/primaryTextColor"
        android:layout_height="match_parent"/>

</RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.20"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:layout_height="match_parent">

        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/adduser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:background="@drawable/bg_btn"
            android:fontFamily="@font/alegreya_sans_medium"
            android:letterSpacing="0.08"
            android:padding="15dp"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:initialCornerAngle="27dp"
            app:spinning_bar_color="@color/white"
         />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
          android:orientation="vertical">


    </LinearLayout>


</LinearLayout>