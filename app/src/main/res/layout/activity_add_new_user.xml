<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.AddNewUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_remove"
            android:layout_width="74dp"
            android:layout_height="62dp"

            android:background="@drawable/logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_weight="1"
        android:background="@drawable/containerlayout"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/alegreya"
                android:gravity="center"
                android:text="@string/addnewuser"
                android:textColor="@color/primaryTextColor"
                android:textSize="30sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:padding="4dp"
                android:text="@string/username"
                android:textColor="@color/gray_btn_bg_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:padding="4dp"
                android:textColor="@color/primaryTextColor"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:padding="4dp"
                android:text="@string/password"
                android:textColor="@color/gray_btn_bg_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/passEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:padding="4dp"
                android:textColor="@color/primaryTextColor"
                android:textSize="18sp"
                android:inputType="textPassword"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"

                android:padding="8dp"
                android:text="@string/type"
                android:textColor="@color/gray_btn_bg_color"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/usertype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:entries="@array/user_type"
                android:padding="4dp"
                android:textColor="@color/primaryTextColor"

                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="@string/dis_per"
                android:textColor="@color/gray_btn_bg_color"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/dis_Per"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/RB_yes"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:text="@string/yes"
                    android:textColor="@color/primaryTextColor" />

                <RadioButton
                    android:id="@+id/RB_no"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="@string/no"
                    android:textColor="@color/primaryTextColor" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:layout_weight="1.20"
            android:orientation="vertical">

            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/adduser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:background="@drawable/bg_btn"
                android:fontFamily="@font/alegreya_sans_medium"
                android:letterSpacing="0.08"
                android:padding="15dp"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:initialCornerAngle="27dp"
                app:spinning_bar_color="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="9dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">


    </LinearLayout>

    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>