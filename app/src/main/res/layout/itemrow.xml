<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="320dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <GridLayout
        android:layout_width="match_parent"
        android:background="@drawable/cancel_button"

        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layoutDirection="locale"

            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/image"
                android:background="@drawable/arabescatobreccia"

                android:layout_height="120dp">


            </ImageView>

<!--            <ScrollView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="1"-->
<!--                android:fillViewport="true">-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"

                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"

                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"

                        android:orientation="horizontal"
                        android:background="@drawable/background_container"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:text="@string/itemNCode"
                         android:textStyle="bold|italic|normal"
                            android:layout_weight="1"
                            android:padding="1dp"
                            android:textColor="@color/purple_500"
                            android:textSize="11sp"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:id="@+id/itemNCode"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:textStyle="bold|italic|normal"

                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:background="@drawable/background_container"

                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView

                            android:textStyle="bold|italic|normal"

                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="@string/qty"
                            android:padding="1dp"
                            android:textColor="@color/purple_500"
                            android:textSize="11sp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/qty"
                            android:textStyle="bold|italic|normal"

                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="@drawable/background_container"
                            android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:textStyle="bold|italic|normal"

                            android:layout_width="match_parent"
                            android:text="@string/itemKind"
                            android:padding="1dp"
                            android:layout_weight="1"
                            android:textColor="@color/purple_500"
                            android:textSize="11sp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/itemKind"
                            android:textStyle="bold|italic|normal"

                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"

                        android:background="@drawable/background_container"

                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView

                            android:textStyle="bold|italic|normal"

                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="@string/tax"
                            android:padding="1dp"
                            android:textColor="@color/purple_500"
                            android:textSize="11sp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tax"
                            android:textStyle="bold|italic|normal"
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/background_container"

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:textStyle="bold|italic|normal"

                            android:layout_width="wrap_content"
                            android:text="@string/unit"
                            android:layout_weight="2"
                            android:padding="1dp"
                            android:textColor="@color/purple_500"
                            android:textSize="11sp"
                            android:layout_height="match_parent"/>
                        <RadioGroup
                            android:id="@+id/unit"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content">
                            <RadioButton
                                android:text="box"
                                android:id="@+id/RB_box"
                                android:layout_weight="2"
                                android:layout_height="match_parent"
                                android:layout_width="wrap_content"
                                >

                            </RadioButton>
                            <RadioButton
                                android:text="Mt"
                                android:layout_weight="2"
                                android:layout_height="match_parent"
                                android:layout_width="wrap_content"
                                android:id="@+id/RB_Mt"
                                >

                            </RadioButton>
                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/background_container"

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold|italic|normal"

                            android:layout_width="match_parent"
                            android:textSize="11sp"
                            android:text="@string/price"
                            android:padding="2dp"
                            android:textColor="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:textSize="10sp"
                            android:layout_weight="1"
                            android:textStyle="bold|italic|normal"


                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/background_container"

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold|italic|normal"

                            android:layout_width="match_parent"
                            android:textSize="11sp"
                            android:text="@string/area"
                            android:padding="1dp"
                            android:textColor="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/area"
                            android:layout_width="match_parent"
                            android:textSize="10sp"
                            android:layout_weight="1"
                            android:textStyle="bold|italic|normal"

                            android:text=""
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>




<!--            </ScrollView>-->

        </LinearLayout>
    </GridLayout>
<TextView
    android:layout_width="50dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
android:id="@+id/salesDailog"

    android:background="@drawable/shopcart"
    android:layout_height="50dp">

</TextView>
