<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:left="4dp"
                        android:top="4dp"
                        android:right="4dp"
                        android:bottom="4dp"
                        />

                    <solid android:color="@color/white" />
                    <stroke android:width="1px" android:color="@color/primaryTextColor" />
                    <corners android:radius="10dp" />
                </shape>
            </item>

            <item>

                <bitmap android:gravity="center_vertical|end" android:src="@drawable/ic_arrow_down"/>

            </item>

        </layer-list>
    </item>
</selector>